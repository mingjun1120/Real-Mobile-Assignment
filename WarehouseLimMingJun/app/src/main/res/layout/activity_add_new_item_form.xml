    <ImageButton
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="@color/Transparent"
        android:contentDescription="@string/clearbtn"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/background"
        app:srcCompat="@drawable/group_65" />

    <ImageButton
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:background="@color/Transparent"
        android:contentDescription="@string/confirmbtn"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/background"
        app:srcCompat="@drawable/group_64" />

    <TextView
        android:id="@+id/shirtCategory"
        android:layout_width="53dp"
        android:layout_height="26dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:text="@string/shirtCategory"
        android:textColor="@color/BlueDarkOpa80"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/category" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="99dp"
        android:layout_height="98dp"
        android:layout_marginStart="29dp"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/image"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>